<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/gyroscope_icon_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_back"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gyroscope Sensor"
            android:textColor="#FFFFFF"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <FrameLayout
            android:id="@+id/compassImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_compass"
            android:padding="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_gyro"/>

            <ImageView
                android:id="@+id/icon_ball"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_ball"
                android:layout_gravity="center"
                android:padding="3dp"
                />
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X : "
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/gyroscope_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textColor="#000"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Y : "
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/gyroscope_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"
                android:textColor="#000"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Z : "
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/gyroscope_z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"
                android:textColor="#000"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>